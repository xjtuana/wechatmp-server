  <mapping resource="org/ana/wcmp/database/mapxml/GroupDAO.hbm.xml"/>
  <mapping resource="org/ana/wcmp/database/mapxml/BasicUserDAO.hbm.xml"/>
  <mapping resource="org/ana/wcmp/database/mapxml/OAUserDAO.hbm.xml"/>
  <mapping resource="org/ana/wcmp/database/mapxml/OrderDAO.hbm.xml"/>
  <mapping resource="org/ana/wcmp/database/mapxml/StaffBuildingRelDAO.hbm.xml"/>
  <mapping resource="org/ana/wcmp/database/mapxml/StaffDAO.hbm.xml"/>
  <mapping resource="org/ana/wcmp/database/mapxml/StaffOrderRelDAO.hbm.xml"/>
  <mapping resource="org/ana/wcmp/database/mapxml/UserRoleDAO.hbm.xml"/>
  <mapping resource="org/ana/wcmp/database/mapxml/WechatArticlePoolDAO.hbm.xml"/>
  <mapping resource="org/ana/wcmp/database/mapxml/WechatBizDAO.hbm.xml"/>
  <mapping resource="org/ana/wcmp/database/mapxml/WechatMsgPoolNewsDAO.hbm.xml"/>
  <mapping resource="org/ana/wcmp/database/mapxml/WechatMsgRecDAO.hbm.xml"/>
  <mapping resource="org/ana/wcmp/database/mapxml/WechatTextPoolDAO.hbm.xml"/>
